{
  "name": "react-easy-spinners",
  "version": "1.0.0",
  "description": "⚛️ A CSS-only spinners in React components",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "test:staged": "jest --findRelatedTests",
    "lint": "eslint **/*.js",
    "lint:fix": "prettier-eslint $PWD/**/*.js --write",
    "storybook": "start-storybook -p 9001 -c storybook",
    "storybook:build": "build-storybook -c storybook"
  },
  "husky": {
    "pre-commit": "lint-staged",
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx}": [
      "npm run lint:fix",
      "npm run test:staged",
      "git add"
    ],
    "*.js": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/h-ARTS/react-easy-spinners.git"
  },
  "keywords": [
    "css-spinners",
    "react-spinners"
  ],
  "author": "Hanan Khan Mufti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/h-ARTS/react-easy-spinners/issues"
  },
  "homepage": "https://github.com/h-ARTS/react-easy-spinners#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@storybook/addon-options": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.15.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^6.1.0"
  },
  "peerDependencies": {
    "react": ">=15"
  },
  "engines": {
    "node": ">=12"
  }
}
